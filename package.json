{
  "name": "homelab-dashboard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite --host\" \"tsx server/index.ts\"",
    "dev:unsafe": "concurrently \"vite --host\" \"NODE_TLS_REJECT_UNAUTHORIZED=0 tsx server/index.ts\"",
    "dev:enhanced": "concurrently \"vite --host\" \"tsx server/index.ts\"",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "start": "tsx server/index.ts",
    "start:enhanced": "tsx server/index.ts",
    "start:phase2": "tsx server/index.ts",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "lint:css": "stylelint \"src/**/*.css\" --allow-empty-input",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix --allow-empty-input",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:services": "vitest run tests/services.test.js"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0",
    "@tanstack/react-virtual": "^3.8.3",
    "@use-gesture/react": "^10.3.1",
    "colorthief": "^2.6.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "framer-motion": "^11.3.12",
    "immer": "^10.1.1",
    "lowdb": "^7.0.1",
    "lucide-react": "^0.525.0",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "node-fetch": "^3.3.2",
    "node-ssh": "^13.2.1",
    "nodemailer": "^7.0.5",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-loading-skeleton": "^3.4.0",
    "react-use-measure": "^2.1.1",
    "redis": "^4.7.1",
    "redis-cli": "^2.1.2",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.3",
    "tcp-ping": "^0.1.1",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "jsdom": "^25.0.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.43.1",
    "tsx": "^4.21.0",
    "typescript": "~5.6.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}